// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Github Dark"
  },
  "experimental.theme_overrides": {
    "background.appearance": "blurred",
    "background": "#11111130",
    "editor.background": "#00000030",
    "tab_bar": "#00000030",
    "editor.gutter.background": "#00000030",
    "terminal.background": "#00000000",
    "toolbar.background": "#00000030",
    "tab.inactive_background": "#00000000",
    "tab.active_background": "#00000050",
    "border": "#00000030",
    "status_bar.background": "#00000030",
    "title_bar.background": "#00000030",
    "title_bar.inactive_background": "#00000030",
    "panel.background": "#00000030",
    "border.variant": "#00000000",
    "scrollbar.track.border": "#00000000"
  },
  "vim_mode": true,
  "soft_wrap": "editor_width",
  "restore_on_startup": "none"
}
